@model RemovePaisViewModel
@{
	ViewData["Title"] = "Eliminar País";
}

<div class="col-12 col-md-6 offset-md-3">
	<div class="card">
		<div class="card-header bg-danger text-bg-light">
			<h3 class="text-center">Eliminar - @Model.Nombre </h3>
		</div>
		<div class="card-body">
			<form asp-controller="Pais" asp-action="DeletePost" method="POST">
				@Html.AntiForgeryToken()
				<input type="hidden" asp-for="Id" />
				<p>¿Está seguro de que desea eliminar el país <strong>@Model.Nombre</strong>?</p>
				<div class="mb-3">
					<button type="submit" class="btn btn-danger">Eliminar</button>
					<a asp-controller="Pais" asp-action="Index" class="btn btn-secondary">Cancelar</a>
				</div>
			</form>
		</div>
	</div>
</div>
